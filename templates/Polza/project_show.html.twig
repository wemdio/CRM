<script>
    let isEditMode = false;
    let originalData = {};

    function enableEditMode() {
        if (!isEditMode) {
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
            const form = document.getElementById('project-form');
            const formData = new FormData(form);
            originalData = {};
            for (let [key, value] of formData.entries()) {
                originalData[key] = value;
            }

            // –í–∫–ª—é—á–∞–µ–º —Ä–µ–∂–∏–º —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
            document.getElementById('project-details').classList.add('edit-mode');
            document.getElementById('edit-btn').style.display = 'none';
            isEditMode = true;
        }
    }

    function cancelEdit() {
        // –í–æ—Å—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
        for (const [key, value] of Object.entries(originalData)) {
            const input = document.querySelector(`[name="${key}"]`);
            if (input) {
                input.value = value;
            }
        }

        // –í—ã–∫–ª—é—á–∞–µ–º —Ä–µ–∂–∏–º —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
        document.getElementById('project-details').classList.remove('edit-mode');
        document.getElementById('edit-btn').style.display = 'block';
        isEditMode = false;
    }

    // –û—Ç–º–µ–Ω–∞ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –ø—Ä–∏ –Ω–∞–∂–∞—Ç–∏–∏ Escape
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape' && isEditMode) {
            cancelEdit();
        }
    });
</script>
